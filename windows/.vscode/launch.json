// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Game (GDB on Windows)",
      "type": "cppdbg",
      "request": "launch",

      // match your debug .exe path under the Root folder:
      "program": "${workspaceFolder:Root}/debug/game.exe",

      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder:Root}",
      "externalConsole": false,

      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys2/mingw64/bin/gdb.exe",

      "preLaunchTask": "make debug"
    }
  ]
}
